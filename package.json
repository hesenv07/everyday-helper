{
  "name": "everyday-helper",
  "version": "1.0.19",
  "description": "A lightweight collection of React hooks, utility functions, and helpers for modern React development",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Hasanli Hajagha"
  },
  "maintainers": [
    {
      "name": "Hasanli Hajagha",
      "email": "hacagahasanli@gmail.com",
      "web": "http://github.com/hacagahasanli"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hacagahasanli/everyday-helper"
  },
  "directories": {
    "dist": "./dist"
  },
  "keywords": [
    "lib",
    "react",
    "hooks",
    "toolkit",
    "utilities"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "dev": "tsup --watch",
    "test": "vitest",
    "release": "semantic-release",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --reporter=verbose"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "react-router-dom": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "react-router-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^15.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.0",
    "@types/react-router-dom": "^5.3.3"
  },
  "dependencies": {}
}
